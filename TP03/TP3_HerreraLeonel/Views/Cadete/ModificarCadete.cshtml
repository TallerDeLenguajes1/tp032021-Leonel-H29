@model TP3_HerreraLeonel.ViewModels.CadeteModificarViewModel

@{
    ViewData["Title"] = "ModificarCadete";
}
@await Html.PartialAsync("_NavAdminPartial", Model.UsuarioLog)
<div class="text-center">

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Cadete" asp-action="Index" title="Lista">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                    <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zM4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                </svg>
                Listado
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg>
                Alta
            </a>
        </li>
    </ul>
    <br />
    <h1 class="display-4">Modificar Cadete: <b>@Model.Id</b></h1>

    <div class="card">
        <div class="card-body">
            <form asp-action="ModificarCadete" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <fieldset>
                    <legend>Ingrese los datos</legend>
                    <div class="mb-3">
                        <input hidden asp-for="UsuarioLog" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <input hidden asp-for="Id" class="form-control" required />
                        @*
                            <input hidden type="text" id="Id" name="Id" class="form-control" value="@Model.Item1.Id" required>
                        *@
                    </div>

                    <div class="mb-3">
                        @*
                            <label class="form-label">NOMBRE/S</label>
                            <input type="text" id="_Nombre" name="_Nombre" class="form-control" value="@Model.Item1.Nombre" required>
                        *@

                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        @*
                            <label class="form-label">DIRECCION</label>
                            <input type="text" id="_Direccion" name="_Direccion" class="form-control" value="@Model.Item1.Direccion" placeholder="Ingrese su direccion" required>
                        *@

                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" required />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        @*
                            <label class="form-label">TELEFONO</label>
                            <input type="text" id="_Telefono" name="_Telefono" class="form-control" value="@Model.Item1.Telefono" placeholder="Ingrese su numero de telefono" required>
                        *@

                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary" value="Save" title="Enviar">ENVIAR</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>
