
@{
    ViewData["Title"] = "Alta Pedidos";
}
@model List<TP3_HerreraLeonel.Entities.Cadete>
@Html.Partial("_NavAdminPartial")

<div class="text-center">

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Pedido" asp-action="Index" title="Lista">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                    <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zM4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                </svg>
                Listado
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg>
                Alta
            </a>
        </li>
    </ul>
    <br />
    <h1 class="display-4">Alta de Pedidos</h1>

    <div class="card">
        <div class="card-body">
            @if (Model.Count() > 0)
            {
                <form asp-action="AltaPedido" method="post">
                    <fieldset>
                        <legend>Ingrese los datos</legend>

                        <div class="mb-3">
                            <label for="name" class="form-label">NOMBRE COMPLETO</label>
                            <input type="text" class="form-control" id="_NombreClie" name="_NombreClie" required>
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">DIRECCION</label>
                            <input type="text" class="form-control" id="_DireccionClie" name="_DireccionClie" required>
                        </div>
                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">TELEFONO</label>
                            <input type="text" class="form-control" id="_TelefonoClie" name="_TelefonoClie" required>
                        </div>
                        <div class="mb-3">
                            <label for="Observations" class="form-label">OBSERVACIONES</label>
                            <textarea type="text" class="form-control" id="_Obs" name="_Obs"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="Cadete" class="form-label">CADETE</label>
                            <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="_IdCadete" id="_IdCadete" required>
                                <option selected disabled>--SELECCIONE UN CADETE--</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.Id">@item.Id- @item.Nombre</option>
                                }

                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary" title="Enviar">ENVIAR</button>
                    </fieldset>
                </form>
            }
            else
            {
                <div class="alert alert-warning d-flex align-items-center" role="alert">

                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-diamond-fill" viewBox="0 0 16 16">
                            <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM8 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995A.905.905 0 0 1 8 4zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                        </svg>
                        <b>No se esta encontrando un registro de un cadete hasta ahora</b>
                        <hr />
                        <a class="nav-link text-dark" asp-area="" asp-controller="Cadete" asp-action="AltaCadete" title="Alta de cadete">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                            </svg>
                            Dar Alta un cadete
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>