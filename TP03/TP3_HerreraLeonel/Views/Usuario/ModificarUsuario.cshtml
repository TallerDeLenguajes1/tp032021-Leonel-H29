@model TP3_HerreraLeonel.ViewModels.ModificarUsuarioViewModel

@{
    ViewData["Title"] = "ModificarUsuario";
}

@await Html.PartialAsync("_NavAdminPartial", Model.UsuarioLog)
<div class="text-center">
    <a class="nav-link active" asp-controller="Usuario" asp-action="Index" title="Volver al Listado">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-bar-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M12.5 15a.5.5 0 0 1-.5-.5v-13a.5.5 0 0 1 1 0v13a.5.5 0 0 1-.5.5zM10 8a.5.5 0 0 1-.5.5H3.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L3.707 7.5H9.5a.5.5 0 0 1 .5.5z" />
        </svg>
        Volver al Listado
    </a>
    <h1 class="display-4">Modificar Cadete: <b>@Model.Id_usuario</b> - @Model.Username</h1>

    @if (Model.ErrorMessage != null)
    {
        <!-- Error Message -->
        <div class="alert alert-danger" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-octagon-fill" viewBox="0 0 16 16">
                <path d="M11.46.146A.5.5 0 0 0 11.107 0H4.893a.5.5 0 0 0-.353.146L.146 4.54A.5.5 0 0 0 0 4.893v6.214a.5.5 0 0 0 .146.353l4.394 4.394a.5.5 0 0 0 .353.146h6.214a.5.5 0 0 0 .353-.146l4.394-4.394a.5.5 0 0 0 .146-.353V4.893a.5.5 0 0 0-.146-.353L11.46.146zM8 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995A.905.905 0 0 1 8 4zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </svg>
            @Model.ErrorMessage
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="ModificarUsuario" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <fieldset>
                    <legend>Ingrese los datos</legend>
                    <div class="mb-3">
                        <input hidden asp-for="UsuarioLog" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <input hidden asp-for="Id_usuario" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" required />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Confirm_Password" class="control-label"></label>
                        <input asp-for="Confirm_Password" class="form-control" type="password" required />
                        <span asp-validation-for="Confirm_Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary" value="ENVIAR" title="Enviar">ENVIAR</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
